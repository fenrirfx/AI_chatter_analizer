<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Hugging Face API Token -->
    <record id="ai_chatter_hf_token" model="ir.config_parameter">
        <field name="key">ai_chatter.hf_token</field>
        <field name="value">YOUR_HUGGING_FACE_API_TOKEN_HERE</field>
    </record>

    <!-- Summarization Model -->
    <record id="ai_chatter_summary_model" model="ir.config_parameter">
        <field name="key">ai_chatter.summary_model</field>
        <field name="value">facebook/bart-large-cnn</field>
    </record>

    <!-- Classification Model -->
    <record id="ai_chatter_classification_model" model="ir.config_parameter">
        <field name="key">ai_chatter.classification_model</field>
        <field name="value">cardiffnlp/twitter-roberta-base-sentiment</field>
    </record>

    <!-- Recommendation Model -->
    <record id="ai_chatter_recommendation_model" model="ir.config_parameter">
        <field name="key">ai_chatter.recommendation_model</field>
        <field name="value">meta-llama/Llama-3.1-8B-Instruct</field>
    </record>
</odoo>
